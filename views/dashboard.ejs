<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><i class="fas fa-tachometer-alt"></i> Dashboard</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <button type="button" class="btn btn-sm btn-outline-secondary" onclick="location.reload()">
                <i class="fas fa-sync-alt"></i> Aktualisieren
            </button>
        </div>
    </div>
</div>

<!-- Statistik Cards -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Gesamte Nachrichten
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-light">
                            <%= stats.total_messages.toLocaleString() %>
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-comments fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Offene Tickets
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-light">
                            <%= stats.open_tickets %>
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-ticket-alt fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Verifizierte Benutzer
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-light">
                            <%= stats.verified_users %>
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-user-check fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            Aktive Temp Channels
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-light">
                            <%= stats.active_temp_channels %>
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-microphone fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row mb-4">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0"><i class="fas fa-bolt"></i> Schnellaktionen</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="/messages" class="btn btn-outline-primary">
                        <i class="fas fa-search"></i> Nachrichten durchsuchen
                    </a>
                    <a href="/tickets" class="btn btn-outline-warning">
                        <i class="fas fa-ticket-alt"></i> Tickets verwalten
                    </a>
                    <% if (user.role === 'admin') { %>
                    <a href="/users" class="btn btn-outline-info">
                        <i class="fas fa-users"></i> Benutzer verwalten
                    </a>
                    <a href="/logs" class="btn btn-outline-secondary">
                        <i class="fas fa-list"></i> Web Logs einsehen
                    </a>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0"><i class="fas fa-info-circle"></i> System Info</h5>
            </div>
            <div class="card-body">
                <table class="table table-sm table-dark">
                    <tbody>
                        <tr>
                            <td><strong>Server Zeit:</strong></td>
                            <td><span id="current-time"></span></td>
                        </tr>
                        <tr>
                            <td><strong>Deine Rolle:</strong></td>
                            <td>
                                <span class="badge bg-<%= user.role === 'admin' ? 'danger' : 'warning' %>">
                                    <%= user.role.toUpperCase() %>
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <td><strong>Bot Status:</strong></td>
                            <td>
                                <span class="badge bg-success">
                                    <i class="fas fa-circle"></i> Online
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <td><strong>Datenbank:</strong></td>
                            <td>
                                <span class="badge bg-success">
                                    <i class="fas fa-database"></i> Verbunden
                                </span>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Neueste Aktivitäten -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0"><i class="fas fa-clock"></i> Neueste Aktivitäten</h5>
                <small class="text-muted">Letzte 10 Einträge</small>
            </div>
            <div class="card-body">
                <div id="recent-activities">
                    <p class="text-center text-muted">
                        <i class="fas fa-spinner fa-spin"></i> Lade Aktivitäten...
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.border-left-primary { border-left: 4px solid #4e73df !important; }
.border-left-success { border-left: 4px solid #1cc88a !important; }
.border-left-info { border-left: 4px solid #36b9cc !important; }
.border-left-warning { border-left: 4px solid #f6c23e !important; }

.text-gray-300 { color: #d1d3e2 !important; }

.activity-item {
    border-left: 3px solid #dee2e6;
    padding-left: 1rem;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
}

.activity-time {
    font-size: 0.8em;
    color: #6c757d;
}

.shadow {
    box-shadow: 0 .15rem 1.75rem 0 rgba(58, 59, 69, .15) !important;
}
</style>

<script>
// Aktuelle Zeit anzeigen und aktualisieren
function updateTime() {
    const now = new Date();
    document.getElementById('current-time').textContent = now.toLocaleString('de-DE');
}

// Zeit beim Laden setzen und jede Sekunde aktualisieren
updateTime();
setInterval(updateTime, 1000);

// Neueste Aktivitäten laden (Mock-Daten)
setTimeout(() => {
    const activities = [
        { type: 'ticket', icon: 'ticket-alt', text: 'Neues Ticket #1234 von User123', time: '2 Minuten', color: 'warning' },
    ];

    const container = document.getElementById('recent-activities');
    container.innerHTML = activities.map(activity => `
        <div class="activity-item">
            <div class="d-flex align-items-center">
                <div class="me-3">
                    <i class="fas fa-${activity.icon} text-${activity.color}"></i>
                </div>
                <div class="flex-grow-1">
                    <div>${activity.text}</div>
                    <small class="activity-time">vor ${activity.time}</small>
                </div>
            </div>
        </div>
    `).join('');
}, 1000);
</script>