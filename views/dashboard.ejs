<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><i class="fas fa-tachometer-alt"></i> Dashboard</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <button type="button" class="btn btn-sm btn-outline-secondary" onclick="location.reload()">
                <i class="fas fa-sync-alt"></i> Aktualisieren
            </button>
        </div>
    </div>
</div>

<!-- Statistik Cards -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Gesamte Nachrichten
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-light">
                            <%= stats.total_messages.toLocaleString() %>
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-comments fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Offene Tickets
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-light">
                            <%= stats.open_tickets %>
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-ticket-alt fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Verifizierte Benutzer
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-light">
                            <%= stats.verified_users %>
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-user-check fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            Aktive Temp Channels
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-light">
                            <%= stats.active_temp_channels %>
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-microphone fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row mb-4">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0"><i class="fas fa-bolt"></i> Schnellaktionen</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="/messages" class="btn btn-outline-primary">
                        <i class="fas fa-search"></i> Nachrichten durchsuchen
                    </a>
                    <a href="/tickets" class="btn btn-outline-warning">
                        <i class="fas fa-ticket-alt"></i> Tickets verwalten
                    </a>
                    <% if (user.role === 'admin') { %>
                    <a href="/users" class="btn btn-outline-info">
                        <i class="fas fa-users"></i> Benutzer verwalten
                    </a>
                    <a href="/logs" class="btn btn-outline-secondary">
                        <i class="fas fa-list"></i> Web Logs einsehen
                    </a>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0"><i class="fas fa-info-circle"></i> System Info</h5>
            </div>
            <div class="card-body">
                <table class="table table-sm table-dark">
                    <tbody>
                        <tr>
                            <td><strong>Server Zeit:</strong></td>
                            <td><span id="current-time"></span></td>
                        </tr>
                        <tr>
                            <td><strong>Deine Rolle:</strong></td>
                            <td>
                                <span class="badge bg-<%= user.role === 'admin' ? 'danger' : 'warning' %>">
                                    <%= user.role.toUpperCase() %>
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <td><strong>Bot Status:</strong></td>
                            <td>
                                <span class="badge bg-success">
                                    <i class="fas fa-circle"></i> Online
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <td><strong>Datenbank:</strong></td>
                            <td>
                                <span class="badge bg-success">
                                    <i class="fas fa-database"></i> Verbunden
                                </span>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Neueste Aktivitäten -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="fas fa-clock"></i> Neueste Aktivitäten
                    <span class="live-indicator"></span>
                </h5>
                <div class="activity-controls">
                    <button class="btn btn-sm btn-outline-secondary" onclick="refreshActivities()" title="Aktivitäten aktualisieren">
                        <i class="fas fa-sync-alt" id="refresh-icon"></i>
                    </button>
                    <small class="text-muted ms-2">Live Updates</small>
                </div>
            </div>
            <div class="card-body">
                <div id="recent-activities">
                    <% if (typeof activities !== 'undefined' && activities.length > 0) { %>
                        <% activities.forEach(function(activity, index) { %>
                        <div class="activity-item <%= activity.type %>" data-activity-type="<%= activity.type %>">
                            <div class="activity-icon">
                                <i class="<%= activity.icon %> text-<%= activity.color %>"></i>
                            </div>
                            <div class="activity-content">
                                <div class="activity-text">
                                    <%= activity.text %>
                                </div>
                                <div class="activity-meta">
                                    <span class="activity-time">
                                        <i class="fas fa-clock"></i> <%= activity.time %>
                                    </span>
                                    <% if (activity.target && activity.type !== 'user_verified' && activity.type !== 'web_activity') { %>
                                    <span class="activity-target">
                                        <i class="fas fa-arrow-right"></i> <%= activity.target %>
                                    </span>
                                    <% } %>
                                </div>
                            </div>
                            <div class="activity-actions">
                                <% if (activity.type === 'message') { %>
                                <button class="btn btn-sm btn-outline-info" onclick="viewMessage('<%= activity.target %>')" title="Nachricht anzeigen">
                                    <i class="fas fa-eye"></i>
                                </button>
                                <% } else if (activity.type === 'ticket_created' || activity.type === 'ticket_closed') { %>
                                <button class="btn btn-sm btn-outline-warning" onclick="viewTicket('<%= activity.target %>')" title="Ticket anzeigen">
                                    <i class="fas fa-ticket-alt"></i>
                                </button>
                                <% } else if (activity.type === 'user_verified' || activity.type === 'user_joined') { %>
                                <button class="btn btn-sm btn-outline-success" onclick="viewUser('<%= activity.actor %>')" title="Benutzer anzeigen">
                                    <i class="fas fa-user"></i>
                                </button>
                                <% } else if (activity.type === 'web_activity') { %>
                                <% if (user.role === 'admin') { %>
                                <button class="btn btn-sm btn-outline-secondary" onclick="viewWebLogs()" title="Web Logs anzeigen">
                                    <i class="fas fa-globe"></i>
                                </button>
                                <% } %>
                                <% } %>
                            </div>
                        </div>
                        <% }); %>
                    <% } else { %>
                        <div class="no-activities">
                            <div class="text-center py-4">
                                <i class="fas fa-history fa-3x text-muted mb-3"></i>
                                <p class="text-muted">Noch keine Aktivitäten vorhanden.</p>
                                <button class="btn btn-squad btn-sm" onclick="refreshActivities()">
                                    <i class="fas fa-sync-alt"></i> Aktualisieren
                                </button>
                            </div>
                        </div>
                    <% } %>
                </div>
                
                <!-- Alle Aktivitäten Button -->
                <div class="activity-footer mt-3 pt-3 border-top">
                    <div class="d-flex justify-content-between align-items-center">
                        <small class="text-muted">
                            <i class="fas fa-info-circle"></i>
                            Zeige die letzten <%= typeof activities !== 'undefined' ? activities.length : 0 %> Aktivitäten
                        </small>
                        <div class="btn-group btn-group-sm">
                            <a href="/messages" class="btn btn-outline-primary">
                                <i class="fas fa-comments"></i> Alle Nachrichten
                            </a>
                            <a href="/tickets" class="btn btn-outline-warning">
                                <i class="fas fa-ticket-alt"></i> Alle Tickets
                            </a>
                            <% if (user.role === 'admin') { %>
                            <a href="/users" class="btn btn-outline-info">
                                <i class="fas fa-users"></i> Benutzer
                            </a>
                            <a href="/logs" class="btn btn-outline-secondary">
                                <i class="fas fa-list"></i> Web Logs
                            </a>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

