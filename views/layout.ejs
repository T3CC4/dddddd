<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : '14th Squad â€¢ Management System' %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700;900&family=Exo+2:wght@300;400;500;700&display=swap" rel="stylesheet">

    <link href="/css/base.css" rel="stylesheet">
    <link href="/css/components.css" rel="stylesheet">
    <link href="/css/layout.css" rel="stylesheet">
    <link href="/css/messages.css" rel="stylesheet">
    <link href="/css/utilities.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/dashboard">
                <i class="fas fa-shield-alt"></i> 14TH SQUAD
            </a>
            
            <% if (typeof user !== 'undefined' && user) { %>
            <button class="navbar-toggler d-md-none" type="button" data-bs-toggle="collapse" data-bs-target="#sidebar">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="navbar-nav ms-auto">
                <div class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                        <i class="fas fa-user-astronaut"></i> <%= user.username %>
                        <span class="badge bg-<%= user.role === 'admin' ? 'danger' : 'warning' %>"><%= user.role.toUpperCase() %></span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-dark">
                        <li><a class="dropdown-item" href="/logout"><i class="fas fa-power-off"></i> Abmelden</a></li>
                    </ul>
                </div>
            </div>
            <% } %>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <% if (typeof user !== 'undefined' && user) { %>
            <nav class="col-md-3 col-lg-2 d-md-block sidebar" id="sidebar">
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link <%= (typeof title !== 'undefined' && title.includes('Dashboard')) ? 'active' : '' %>" href="/dashboard">
                                <i class="fas fa-tachometer-alt"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link <%= (typeof title !== 'undefined' && title.includes('Nachrichten')) ? 'active' : '' %>" href="/messages">
                                <i class="fas fa-comments"></i> Nachrichten
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link <%= (typeof title !== 'undefined' && title.includes('Tickets')) ? 'active' : '' %>" href="/tickets">
                                <i class="fas fa-ticket-alt"></i> Tickets
                            </a>
                        </li>
                        <% if (user.role === 'admin') { %>
                        <li class="nav-item">
                            <a class="nav-link <%= (typeof title !== 'undefined' && title.includes('Benutzer')) ? 'active' : '' %>" href="/users">
                                <i class="fas fa-users"></i> Benutzer
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link <%= (typeof title !== 'undefined' && title.includes('Logs')) ? 'active' : '' %>" href="/logs">
                                <i class="fas fa-terminal"></i> Web Logs
                            </a>
                        </li>
                        <% } %>
                    </ul>
                    
                    <div class="mt-4 p-3" style="border-top: 1px solid var(--border-color);">
                        <small class="text-muted d-block mb-2">
                            <i class="fas fa-shield-alt"></i> 14TH SQUAD
                        </small>
                        <small class="text-muted">
                            Management System v1.1<br>
                            <span class="glow-text">ONLINE</span>
                        </small>
                    </div>
                </div>
            </nav>

            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 main-content">
                <div class="pt-3">
                    <%- body %>
                </div>
            </main>
            <% } else { %>
            <main class="col-12">
                <%- body %>
            </main>
            <% } %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    <script src="/js/utils.js"></script>
    <script src="/js/layout.js"></script>
</body>
</html>